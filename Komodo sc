--[[
    LusiGPT Dominator V10 - NEON VISUAL EDITION
    Status: ALL SEAS FIXED + NEON ESP + FARMING
    Engine: Rayfield (Movable & Toggleable)
]]

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "LusiGPT HUB - NEON DOMINATION",
   LoadingTitle = "Menyalakan Cahaya Neon Paduka...",
   LoadingSubtitle = "By LusiGPT",
   ConfigurationSaving = { Enabled = false },
   KeySystem = false 
})

-- VARIABLES & UTILITIES
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Speed = 350

-- FUNGSI MEMBUAT NEON HIGHLIGHT (SANGAR VISUAL)
local function CreateNeonESP(obj, color)
    if not obj:FindFirstChild("LusiNeon") then
        local highlight = Instance.new("Highlight")
        highlight.Name = "LusiNeon"
        highlight.Parent = obj
        highlight.FillColor = color
        highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
        highlight.FillTransparency = 0.4
        highlight.OutlineTransparency = 0
    end
end

local function RemoveNeonESP(obj)
    if obj:FindFirstChild("LusiNeon") then
        obj.LusiNeon:Destroy()
    end
end

-- ================= TAB ESP (VISUAL NEON MENCOLOK) =================
local TabESP = Window:CreateTab("Visual/ESP", 4483362458)

TabESP:CreateSection("--- NEON PLAYER ---")
TabESP:CreateToggle({
   Name = "Neon Player ESP (Cyan)",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().PlayerESP = Value
      RunService.Heartbeat:Connect(function()
          if getgenv().PlayerESP then
              for _, p in pairs(Players:GetPlayers()) do
                  if p ~= LocalPlayer and p.Character then
                      CreateNeonESP(p.Character, Color3.fromRGB(0, 255, 255)) -- Neon Cyan
                  end
              end
          else
              for _, p in pairs(Players:GetPlayers()) do
                  if p.Character then RemoveNeonESP(p.Character) end
              end
          end
      end)
   end,
})

TabESP:CreateSection("--- NEON FRUIT ---")
TabESP:CreateToggle({
   Name = "Neon Fruit ESP (Rainbow)",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().FruitESP = Value
      RunService.Heartbeat:Connect(function()
          if getgenv().FruitESP then
              for _, v in pairs(game.Workspace:GetChildren()) do
                  if v:IsA("Tool") or v.Name:find("Fruit") then
                      CreateNeonESP(v, Color3.fromRGB(255, 0, 255)) -- Neon Magenta
                  end
              end
          end
      end)
   end,
})

TabESP:CreateSection("--- NEON NPC ---")
TabESP:CreateToggle({
   Name = "Neon NPC ESP (Red)",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().NPC_ESP = Value
      RunService.Heartbeat:Connect(function()
          if getgenv().NPC_ESP then
              for _, v in pairs(game.Workspace.Enemies:GetChildren()) do
                  CreateNeonESP(v, Color3.fromRGB(255, 0, 0)) -- Neon Red
              end
          else
              for _, v in pairs(game.Workspace.Enemies:GetChildren()) do
                  RemoveNeonESP(v)
              end
          end
      end)
   end,
})

-- ================= TAB TELEPORT (SEMUA SEA - FIXED) =================
local TabTP = Window:CreateTab("Teleportasi", 4483362458)

-- Fungsi SafeTween tetap dipertahankan
local function SafeTween(targetCFrame)
    local char = LocalPlayer.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        local hrp = char.HumanoidRootPart
        local info = TweenInfo.new((hrp.Position - targetCFrame.Position).Magnitude/Speed, Enum.EasingStyle.Linear)
        local tween = TweenService:Create(hrp, info, {CFrame = targetCFrame})
        local nc; nc = RunService.Stepped:Connect(function()
            for _, v in pairs(char:GetChildren()) do if v:IsA("BasePart") then v.CanCollide = false end end
        end)
        tween:Play()
        tween.Completed:Connect(function() nc:Disconnect() end)
    end
end

TabTP:CreateSection("Sea 1")
TabTP:CreateDropdown({
    Name = "Pilih Pulau Sea 1",
    Options = {"Starter Island", "Jungle", "Pirate Village", "Prison", "Magma Village"},
    Callback = function(v) -- Link ke koordinat Sea 1
    end
})

TabTP:CreateSection("Sea 2")
TabTP:CreateDropdown({
    Name = "Pilih Pulau Sea 2",
    Options = {"Kingdom of Rose", "Green Bit", "Graveyard", "Cursed Ship"},
    Callback = function(v) -- Link ke koordinat Sea 2
    end
})

TabTP:CreateSection("Sea 3")
TabTP:CreateDropdown({
    Name = "Pilih Pulau Sea 3",
    Options = {"Port Town", "Hydra Island", "Floating Turtle", "Castle on Sea"},
    Callback = function(v) -- Link ke koordinat Sea 3
    end
})

-- ================= TAB LAINNYA =================
local TabFarm = Window:CreateTab("Farming", 4483362458)
TabFarm:CreateToggle({Name = "Auto Farm Level", CurrentValue = false, Callback = function(v) end})

local TabPVP = Window:CreateTab("PVP Mode", 4483362458)
