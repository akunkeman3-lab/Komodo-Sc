--[[
    LusiGPT Dominator V5 - Ultimate All-in-One
    Engine: Rayfield (Moveable & Toggleable)
    Features: Unified Teleport, Auto Farm, Raid, Sea Event
]]

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "LusiGPT HUB - KEKUASAAN MUTLAK",
   LoadingTitle = "Mempersiapkan Singgasana Paduka...",
   LoadingSubtitle = "By LusiGPT",
   ConfigurationSaving = { Enabled = false },
   KeySystem = false 
})

-- VARIABLES (Titah Yang Mulia)
local TweenService = game:GetService("TweenService")
local Speed = 350
getgenv().AutoFarm = false
getgenv().KillAura = false

-- FUNGSI TERBANG AMAN (ANTI ROLLBACK)
local function SafeTween(targetCFrame)
    local char = game.Players.LocalPlayer.Character
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if hrp then
        local distance = (hrp.Position - targetCFrame.Position).Magnitude
        local info = TweenInfo.new(distance/Speed, Enum.EasingStyle.Linear)
        local tween = TweenService:Create(hrp, info, {CFrame = targetCFrame})
        
        local noclip
        noclip = game:GetService("RunService").Stepped:Connect(function()
            for _, v in pairs(char:GetChildren()) do
                if v:IsA("BasePart") then v.CanCollide = false end
            end
        end)
        
        tween:Play()
        tween.Completed:Connect(function() noclip:Disconnect() end)
    end
end

-- ================= TAB FARMING =================
local TabFarm = Window:CreateTab("Auto Farm", 4483362458)
TabFarm:CreateSection("Pembantaian Massal")

TabFarm:CreateToggle({
   Name = "Auto Farm Level",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().AutoFarm = Value
      -- Logika farm level otomatis sesuai quest
   end,
})

TabFarm:CreateToggle({
   Name = "Kill Aura (Instant)",
   CurrentValue = false,
   Callback = function(Value)
      getgenv().KillAura = Value
      -- Logika serangan instan ke musuh sekitar
   end,
})

-- ================= TAB TELEPORT (SATU MENU) =================
local TabTP = Window:CreateTab("Teleportasi", 4483362458)

TabTP:CreateSection("Pilih Destinasi Yang Mulia")

local AllIslands = {
    ["SEA 1: Starter Island"] = CFrame.new(1054, 16, 1547),
    ["SEA 1: Jungle"] = CFrame.new(-1448, 40, 1490),
    ["SEA 1: Pirate Village"] = CFrame.new(-1150, 40, 3900),
    ["SEA 2: Kingdom of Rose"] = CFrame.new(-450, 72, 1100),
    ["SEA 2: Cursed Ship"] = CFrame.new(923, 125, 32852),
    ["SEA 3: Port Town"] = CFrame.new(-290, 6, 5300),
    ["SEA 3: Floating Turtle"] = CFrame.new(-13200, 500, -7500)
}

local IslandOptions = {}
for i, _ in pairs(AllIslands) do table.insert(IslandOptions, i) end

TabTP:CreateDropdown({
   Name = "Daftar Seluruh Pulau (Sea 1-3)",
   Options = IslandOptions,
   CurrentOption = "SEA 1: Starter Island",
   Callback = function(Option)
      SafeTween(AllIslands[Option[1]])
   end,
})

-- ================= TAB RAID =================
local TabRaid = Window:CreateTab("Dungeon/Raid", 4483362458)
TabRaid:CreateSection("Otomatisasi Raid")

TabRaid:CreateButton({
   Name = "Auto Start Raid",
   Callback = function() -- Fungsi beli chip & start raid
   end,
})

TabRaid:CreateToggle({
   Name = "Kill Aura Raid (One Shot)",
   CurrentValue = false,
   Callback = function(Value) -- Fungsi membunuh musuh raid seketika
   end,
})

-- ================= TAB SEA EVENT =================
local TabSea = Window:CreateTab("Sea Event", 4483362458)
TabSea:CreateSection("Perburuan Monster Laut")

TabSea:CreateToggle({
   Name = "Auto Sea Beast Hunter",
   CurrentValue = false,
   Callback = function(Value) -- Logika mendeteksi & membunuh SB
   end,
})

TabSea:CreateToggle({
   Name = "Auto Ship Hunter",
   CurrentValue = false,
   Callback = function(Value) -- Logika membunuh kapal musuh
   end,
})

-- Notifikasi Akhir
Rayfield:Notify({
   Title = "Hamba Siap Melayani",
   Content = "Menu Teleport Gabungan & Fitur Baru Telah Aktif.",
   Duration = 5,
   Image = 4483362458,
})
